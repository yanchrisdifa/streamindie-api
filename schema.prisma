datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id              String  @id @default(cuid())
  name            String  @default("")
  email           String  @unique @default("")
  password        String
  posts           Post[]  @relation("Post_author")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  genres          Genre[] @relation("Genre_artists")
  songs           Song[]  @relation("Song_artists")
  userType        String? @default("artist")
}

model Song {
  id        String    @id @default(cuid())
  title     String    @default("")
  imageUrl  String    @default("")
  artists   User?     @relation("Song_artists", fields: [artistsId], references: [id])
  artistsId String?   @map("artists")
  genres    Genre[]   @relation("Genre_songs")
  postedAt  DateTime?

  @@index([artistsId])
}

model Genre {
  id              String  @id @default(cuid())
  name            String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  artists         User[]  @relation("Genre_artists")
  songs           Song[]  @relation("Genre_songs")
}

model Post {
  id          String    @id @default(cuid())
  title       String    @default("")
  status      String?   @default("draft")
  content     String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  tags        Tag[]     @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}